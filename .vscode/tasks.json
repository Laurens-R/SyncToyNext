{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-client",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "Stn.Cli/Stn.Cli.csproj",
        "-c",
        "Debug"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "publish-client",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "Stn.Cli/Stn.Cli.csproj",
        "-c",
        "Release",
        "-r",
        "win-x64",
        "--self-contained",
        "true",
        "-o",
        "./publish/win-x64",
        "/p:PublishTrimmed=true",
        "/p:TrimMode=link",
        "/p:DebugType=None",
        "/p:DebugSymbols=false"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
